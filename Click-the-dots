<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Click the Dots Game</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
      overflow: hidden;
      background-color: white;
      color: black;
    }

    #home-page, #game-area {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    #home-page {
      text-align: center;
      border: 2px solid black;
      padding: 20px;
      border-radius: 10px;
    }

    #game-area {
      position: relative;
      width: 80vw;
      height: 80vh;
      background-color: black;
      border: 2px solid white;
      overflow: hidden;
      display: none;
      border-radius: 10px;
      color: white;
    }

    .dot {
      position: absolute;
      width: 40px;
      height: 40px;
      background-color: #FFF44F; /* lemon yellow */
      border-radius: 12px;
      cursor: pointer;
    }

    #score-board, #level-board, #goal-board {
      margin-top: 10px;
      font-size: 24px;
    }

    #start-button, #retry-button {
      padding: 10px 20px;
      font-size: 20px;
      background-color: yellow;
      border: none;
      cursor: pointer;
      border-radius: 5px;
      margin-top: 20px;
      transition: background-color 0.3s, transform 0.2s;
    }

    #start-button:hover, #retry-button:hover {
      background-color: gold;
      transform: scale(1.05);
    }

    #next-level-button {
      padding: 10px 20px;
      font-size: 20px;
      background-color: #ffa805;
      border: none;
      cursor: pointer;
      border-radius: 5px;
      margin-top: 20px;
      display: none;
      color: black;
      transition: background-color 0.3s, transform 0.2s;
    }

    #next-level-button:hover {
      background-color: #e39504;
      transform: scale(1.05);
    }

    /* Celebration animation - Subtle Sparkle & Shine */
    #celebration {
      position: absolute;
      top: 10px;              /* inside game area near top */
      left: 50%;
      transform: translateX(-50%);
      z-index: 1000;
      pointer-events: none;
      display: none;
      padding: 20px 40px;
      border-radius: 20px;
      background: rgba(255, 223, 0, 0.15);
      color: #ffe066;
      font-size: 48px;
      font-weight: 800;
      text-align: center;
      overflow: hidden;
      animation: sparkleFade 3s forwards;
      user-select: none;
      box-shadow: 0 0 20px #ffd700;
      max-width: 90%;
      white-space: nowrap;
      position: absolute;
    }

    #celebration::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: linear-gradient(120deg, transparent 30%, rgba(255,255,255,0.7) 50%, transparent 70%);
      transform: rotate(25deg);
      animation: shine 3s forwards;
      pointer-events: none;
    }

    @keyframes sparkleFade {
      0% {
        opacity: 0;
      }
      20% {
        opacity: 1;
      }
      80% {
        opacity: 1;
      }
      100% {
        opacity: 0;
      }
    }

    @keyframes shine {
      0% {
        transform: translateX(-100%) rotate(25deg);
      }
      100% {
        transform: translateX(100%) rotate(25deg);
      }
    }
  </style>
